{% extends 'partials/base.html.twig' %}
{% block content %}
<section id="hero">
    <div class="row">
        <div class="twelve columns">
            <div class="hero-text">
                <h1 class="responsive-headline">{{ page.header.heading }}</h1>
                <p> {{ page.header.sub_heading }} </p>
            </div>

            {% if page.header.buttons %}
                <div class="buttons">
                   {% for button in page.header.buttons %}
                     <a class="{{ button.class }}" href="{{ button.url }}">{{ button.text }}</a>
                   {% endfor %}
                </div>
           {% endif %}

            <div class="hero-image">
                {{ page.media[page.header.showcase_image].html() }}
            </div>
        </div>
    </div>
</section>

<section id="styles" style="padding: 90px 0 72px; background: #fff;">
    <div class="row">
        {{ page.content }}
    </div>
</section>

{% endblock %}



