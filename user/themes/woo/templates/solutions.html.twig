{% extends 'partials/base.html.twig' %}

    {% set collection = page.collection() %}

    {% block content %}
    <div class="blog-outer">
        <div class="content-wrapper blog-content-list grid pure-g row">
            <div class="breadcrumbs block pure-u-sm-1">
            {% if config.plugins.breadcrumbs.enabled %}
                {% include 'partials/breadcrumbs.html.twig' %}
            {% endif %}
            </div>
            <div id="listing" class="block pure-u-sm-1 pure-u-md-2-3 h-feed">
                {% for child in collection %}
                    {% include 'partials/blog_item.html.twig' with {'blog':page, 'page':child, 'truncate':true} %}
                {% endfor %}

                {% if config.plugins.pagination.enabled and collection.params.pagination %}
                    {% include 'partials/pagination.html.twig' with {'base_url':page.url, 'pagination':collection.params.pagination} %}
                {% endif %}
            </div>
            <div id="sidebar" class="block size-1-3 pure-u-sm-1 pure-u-md-1-3">
                {% include 'partials/sidebar.html.twig' with {'blog':page} %}
            </div>
        </div>
    </div>
    {% endblock %}



